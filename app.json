{
  "expo": {
    "name": "Todo",
    "slug": "todo",
    "scheme": "todo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
       [
					"expo-sqlite",
					{
						"enableFTS": true,
						"useSQLCipher": true,
						"android": {
							"enableFTS": false,
							"useSQLCipher": false
						},
						"ios": {
							"customBuildFlags": [
								"-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
							]
						}
					}
				]
    ]
  }
}
